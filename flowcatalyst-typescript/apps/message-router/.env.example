# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Router Configuration
MESSAGE_ROUTER_ENABLED=true
QUEUE_TYPE=EMBEDDED
SYNC_INTERVAL_MS=300000
MAX_POOLS=2000
POOL_WARNING_THRESHOLD=1000
DEFAULT_CONNECTIONS=1

# AWS/SQS Configuration (for QUEUE_TYPE=SQS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SQS_ENDPOINT=http://localhost:4566

# Platform Configuration Client
PLATFORM_URL=
PLATFORM_API_KEY=

# Mediation Defaults
MEDIATION_TIMEOUT_MS=60000
MEDIATION_RETRIES=3
MEDIATION_RETRY_DELAY_MS=1000

# Instance Identification
INSTANCE_ID=router-local
