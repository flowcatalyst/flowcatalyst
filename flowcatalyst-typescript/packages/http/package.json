{
	"name": "@flowcatalyst/http",
	"version": "0.0.1",
	"description": "HTTP layer utilities for FlowCatalyst platform - Fastify plugins, logging, and response handling",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint src --ext .ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@flowcatalyst/domain-core": "workspace:*",
		"@flowcatalyst/tsid": "workspace:*",
		"@fastify/cookie": "^11.0.2",
		"@fastify/type-provider-typebox": "^5.1.0",
		"@sinclair/typebox": "^0.34.30",
		"fastify": "^5.2.1",
		"fastify-plugin": "^5.0.1",
		"pino": "^9.6.0"
	},
	"devDependencies": {
		"@types/node": "^22.10.6",
		"pino-pretty": "^13.0.0",
		"tsup": "^8.5.1",
		"typescript": "^5.7.3",
		"vitest": "^2.1.9"
	},
	"peerDependencies": {
		"@sinclair/typebox": ">=0.34.0",
		"fastify": ">=5.0.0",
		"pino": ">=9.0.0"
	},
	"files": [
		"dist",
		"src"
	],
	"keywords": [
		"flowcatalyst",
		"fastify",
		"plugins",
		"http",
		"openapi",
		"pino"
	]
}
