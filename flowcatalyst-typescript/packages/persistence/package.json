{
	"name": "@flowcatalyst/persistence",
	"version": "0.0.1",
	"description": "Database persistence layer for FlowCatalyst platform using DrizzleORM",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint src --ext .ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@flowcatalyst/domain-core": "workspace:*",
		"@flowcatalyst/tsid": "workspace:*",
		"drizzle-orm": "^0.38.3",
		"postgres": "^3.4.5"
	},
	"devDependencies": {
		"@types/node": "^22.10.6",
		"drizzle-kit": "^0.30.1",
		"tsup": "^8.5.1",
		"typescript": "^5.7.3",
		"vitest": "^2.1.9"
	},
	"peerDependencies": {
		"drizzle-orm": ">=0.38.0",
		"postgres": ">=3.4.0"
	},
	"files": [
		"dist",
		"src"
	],
	"keywords": [
		"flowcatalyst",
		"drizzle",
		"postgres",
		"persistence",
		"unit-of-work"
	]
}
