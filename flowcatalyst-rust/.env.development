# FlowCatalyst Rust Development Environment
# MongoDB replica set for change streams support
FC_MONGO_URL=mongodb://localhost:27017/?replicaSet=rs0&directConnection=true
FC_MONGO_DB=flowcatalyst

# API ports
FC_API_PORT=8080
FC_METRICS_PORT=9090

# Stream processor uses different metrics port to avoid conflict
# FC_METRICS_PORT=9091 (for stream processor)

# Logging
RUST_LOG=info,fc_platform=debug,fc_stream=debug
