# FlowCatalyst Router - Environment Variables
# Copy to .env for local development

# ==============================================================================
# Development Mode
# ==============================================================================

# Set to true for local development with LocalStack
# When enabled, uses built-in configuration and enables test endpoints
# FLOWCATALYST_DEV_MODE=true

# LocalStack endpoint (only used in dev mode)
# LOCALSTACK_ENDPOINT=http://localhost:4566

# ==============================================================================
# Production Mode (default)
# ==============================================================================

# Required in production: Configuration endpoint URL
FLOWCATALYST_CONFIG_URL=http://localhost:8080/api/config

# Optional: Config sync interval in seconds (default: 300)
# FLOWCATALYST_CONFIG_INTERVAL=300

# ==============================================================================
# Common Settings
# ==============================================================================

# Optional: API server port (default: 8080)
# API_PORT=8080

# Optional: Log format - "json" for structured logs (default: text)
# LOG_FORMAT=json

# Optional: Log level filtering (default: info)
# RUST_LOG=info,fc_router=debug,tower_http=warn

# ==============================================================================
# High Availability - Active/Standby mode
# ==============================================================================

# Optional: Enable standby mode
# FLOWCATALYST_STANDBY_ENABLED=true
# FLOWCATALYST_REDIS_URL=redis://localhost:6379

# ==============================================================================
# AWS Configuration (for SQS in production)
# ==============================================================================

# AWS_REGION=eu-west-1
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...

# ==============================================================================
# Notifications - Microsoft Teams Webhooks
# ==============================================================================

# Enable Teams webhook notifications
# NOTIFICATION_TEAMS_ENABLED=true

# Teams webhook URL (required if Teams notifications are enabled)
# NOTIFICATION_TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# Minimum severity level to send notifications (INFO, WARN, ERROR, CRITICAL)
# NOTIFICATION_MIN_SEVERITY=WARN

# Batch interval in seconds (0 = no batching, sends immediately)
# NOTIFICATION_BATCH_INTERVAL=300
